@inject IJSRuntime JS
@inject IConfiguration Configuration

@if (_isAuthenticated)
{
    @ChildContent
}
else if (_isLoading)
{
    <div class="password-gate-loading">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="password-gate-overlay">
        <div class="password-gate-container">
            <div class="password-gate-card">
                <h2>Demo Access</h2>
                <p class="text-muted">Enter the password to view this demo site.</p>

                <form @onsubmit="HandleSubmit">
                    <div class="mb-3">
                        <input type="password"
                               class="form-control @(_showError ? "is-invalid" : "")"
                               placeholder="Enter password"
                               @bind="_password"
                               @bind:event="oninput" />
                        @if (_showError)
                        {
                            <div class="invalid-feedback">
                                Incorrect password. Please try again.
                            </div>
                        }
                    </div>
                    <button type="submit" class="btn btn-primary w-100">
                        Enter Site
                    </button>
                </form>
            </div>
        </div>
    </div>
}

<style>
    .password-gate-loading {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    }

    .password-gate-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .password-gate-container {
        width: 100%;
        max-width: 400px;
        padding: 20px;
    }

    .password-gate-card {
        background: white;
        border-radius: 12px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        text-align: center;
    }

    .password-gate-card h2 {
        margin-bottom: 10px;
        color: #1a1a2e;
    }

    .password-gate-card p {
        margin-bottom: 25px;
    }

    .password-gate-card .form-control {
        padding: 12px 16px;
        font-size: 16px;
    }

    .password-gate-card .btn-primary {
        padding: 12px;
        font-size: 16px;
        font-weight: 500;
    }
</style>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private string _password = "";
    private bool _isAuthenticated = false;
    private bool _isLoading = true;
    private bool _showError = false;

    private string _configuredPassword => Configuration["DemoPassword"] ?? "demo";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var storedAuth = await JS.InvokeAsync<string>("localStorage.getItem", "demo_authenticated");
            if (storedAuth == "true")
            {
                _isAuthenticated = true;
            }
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleSubmit()
    {
        if (_password == _configuredPassword)
        {
            await JS.InvokeVoidAsync("localStorage.setItem", "demo_authenticated", "true");
            _isAuthenticated = true;
            _showError = false;
        }
        else
        {
            _showError = true;
            _password = "";
        }
    }
}
